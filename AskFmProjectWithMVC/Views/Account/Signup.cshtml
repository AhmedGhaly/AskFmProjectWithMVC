@model User

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Signup";
}


<section class="forms-section">
    <h1 class="section-title">Register to ASK</h1>
    <div class="forms">
        <div class="form-wrapper is-active">
            <div class="form-wrapper">

                <form class="form form-signup" method="post" asp-action="signup">
                    <fieldset>
                        <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                        <div class="input-block">
                            <label  asp-for="username"></label>
                            <input asp-for="username" >
                            <span asp-validation-for="username"></span>

                        </div>
                        <div class="input-block">
                            <label asp-for="email"></label>
                            <input asp-for="email" >
                            <span asp-validation-for="email"></span>

                        </div>
                        <div class="input-block">
                            <label asp-for="password"></label>
                            <input asp-for="password" >
                            <span asp-validation-for="password"></span>

                        </div>
                        <div class="input-block">
                            <label asp-for="confirmPass"></label>
                            <input asp-for="confirmPass" >
                            <span asp-validation-for="confirmPass"></span>

                        </div>
                    </fieldset>
                    <button type="submit" class="btn-signup">Continue</button>
                </form>
            </div>
        </div>
    </div>
</section>
<h4><a asp-action="login">LogIn</a></h4>

@section scripts {
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
