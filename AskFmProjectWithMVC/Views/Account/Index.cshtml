@model User
@{
    Layout = "_AccountLayout";
}

<section class="forms-section">
    <h1 class="section-title">Register to ASK</h1>
    <div class="forms">
        <div class="form-wrapper is-active">
            <button type="button" class="switcher switcher-login">
                Login
                <span class="underline"></span>
            </button>
            <form class="form form-login" method="post" asp-action="login">
                <fieldset>
                    <legend>Please, enter your email and password for login.</legend>
                    <div class="input-block">
                        <label asp-for="email"></label>
                        <input asp-for="email" required>
                    </div>
                    <div class="input-block">
                        <label  asp-for="password"></label>
                        <input  asp-for="password" required>
                    </div>
                </fieldset>
                <button type="submit" class="btn-login">Login</button>
            </form>
        </div>
        <div class="form-wrapper">
            <button type="button" class="switcher switcher-signup">
                Sign Up
                <span class="underline"></span>
            </button>
            <form class="form form-signup" method="post" asp-action="signup">
                <fieldset>
                    <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                    <div class="input-block">
                        <label  asp-for="username"></label>
                        <input asp-for="username" required>
                    </div>
                    <div class="input-block">
                        <label asp-for="email"></label>
                        <input asp-for="email" required>
                    </div>
                    <div class="input-block">
                        <label asp-for="password"></label>
                        <input asp-for="password" required>
                    </div>
                    <div class="input-block">
                        <label asp-for="confirmPass"></label>
                        <input asp-for="confirmPass" required>
                    </div>
                </fieldset>
                <button type="submit" class="btn-signup">Continue</button>
            </form>
        </div>
    </div>
</section>